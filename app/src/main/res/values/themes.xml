<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MNotepad.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorBrown</item>
        <!-- Text on Primary -->
        <item name="colorOutline">@color/colorBrown</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundTint">@color/colorBrown</item>
        <!-- Checkbox -->
        <item name="buttonTint">@color/colorBrown</item>
        <!-- Container -->
        <item name="colorSecondaryContainer">@color/colorBrownPale</item>
        <item name="colorButtonNormal">@color/colorBrownDark</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/colorBrownPale</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.MNotepad.Brown" parent="Theme.MNotepad.Base"></style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.MNotepad.Black" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorOutline">@color/white</item>
        <item name="textFillColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorBlackGreen</item>
        <item name="backgroundTint">@color/colorBlackGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="colorSecondaryContainer">@color/colorBlackDark</item>
        <item name="android:windowBackground">@color/colorBlackDark</item>
    </style>

    <style name="Theme.MNotepad.Yellow" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorYellow</item>
        <item name="colorOutline">@color/colorYellowGreen</item>
        <item name="textFillColor">@color/colorYellowGreen</item>
        <item name="colorButtonNormal">@color/colorYellowDark</item>
        <item name="backgroundTint">@color/colorYellowDark</item>
        <item name="colorOnPrimary">@color/colorYellowGreen</item>
        <item name="buttonTint">@color/colorYellowDark</item>
        <item name="colorSecondaryContainer">@color/colorYellow</item>
        <item name="android:windowBackground">@color/colorYellowPale</item>
    </style>

    <style name="Theme.MNotepad.Grey" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorGreyPale</item>
        <item name="colorOutline">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorButtonNormal">@color/colorGreyDark</item>
        <item name="backgroundTint">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="buttonTint">@color/black</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="android:windowBackground">@color/colorGrey</item>
    </style>

    <style name="Theme.MNotepad.System" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorSystemDark</item>
        <item name="colorOutline">@color/colorSystemBluePale</item>
        <item name="textFillColor">@color/colorSystemBluePale</item>
        <item name="colorButtonNormal">@color/colorSystemBlue</item>
        <item name="backgroundTint">@color/colorSystemBlue</item>
        <item name="colorOnPrimary">@color/colorSystemBluePale</item>
        <item name="buttonTint">@color/colorSystemBlue</item>
        <item name="colorSecondaryContainer">@color/colorSystem</item>
        <item name="android:windowBackground">@color/colorSystem</item>
    </style>

    <style name="Theme.MNotepad.Base.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MNotepad.Base.AppWidgetContainer" parent="Theme.MNotepad.Base.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>