<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MNotepad.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBrown</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryBrownDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondaryBrown</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundBrown</item>
        <!-- statusBar color -->
        <item name="android:statusBarColor">@color/colorPrimaryBrownDark</item>
    </style>

    <style name="Theme.MNotepad.Brown" parent="Theme.MNotepad.Base">
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.MNotepad.Black" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryBlackDark</item>
        <item name="colorSecondary">@color/colorAccentBlack</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundBlack</item>
        <item name="android:statusBarColor">@color/colorPrimaryBlackDark</item>
    </style>

    <style name="Theme.MNotepad.Yellow" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorPrimaryYellow</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryYellowDark</item>
        <item name="colorSecondary">@color/colorAccentYellow</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundYellow</item>
        <item name="android:statusBarColor">@color/colorPrimaryYellowDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryYellowDark</item>
    </style>

    <style name="Theme.MNotepad.Grey" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorPrimaryGrey</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryGreyDark</item>
        <item name="colorSecondary">@color/colorAccentGrey</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundGrey</item>
        <item name="android:statusBarColor">@color/colorPrimaryGreyDark</item>
    </style>

    <style name="Theme.MNotepad.System" parent="Theme.MNotepad.Base">
        <item name="colorPrimary">@color/colorPrimarySystem</item>
        <item name="colorPrimaryVariant">@color/colorPrimarySystemDark</item>
        <item name="colorSecondary">@color/colorAccentSystem</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundSystem</item>
        <item name="android:statusBarColor">@color/colorPrimarySystemDark</item>
    </style>
</resources>