<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.5dp" android:color="?attr/colorOutline" android:dashWidth="12dp" android:dashGap="1.5dp" />
            <gradient android:angle="90" android:centerColor="#00FF0000" android:centerY="0.4" android:endColor="#00FF0000" android:startColor="?attr/colorPrimary" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="?attr/colorOutline" android:width="1.5dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>